<section class="form border border-primary">
    <form action="/login" method="post">
       <h1>Login</h1> 

    <div class="mb-3">
        <label for="email">Email</label>
        <input type="email" class="form-control" name="email" id="email" placeholder="Example@gmail.com" required>
    </div>
    <div class="mb-3">
        <label for="password">Password</label>
        <input type="password" class="form-control" name="password" id="password" placeholder="Min 6 characters" required>
    </div>
    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-light btn-sm">Login</button>
    </div>
    </form>
      <p>Don't have an account? <a href="/">Register</a></p>
